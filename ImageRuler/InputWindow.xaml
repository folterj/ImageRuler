<Window x:Class="ImageRuler.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="" Height="97" Width="152" ResizeMode="NoResize" SizeToContent="WidthAndHeight" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" Closing="Window_Closing" Activated="Window_Activated" Icon="Resources/RulersIcon.ico">
    <Grid>
        <TextBox x:Name="inputText" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="125"/>
        <Button x:Name="okButton" Content="Ok" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="60" IsDefault="True" Click="okButton_Click"/>
        <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="75,38,0,0" VerticalAlignment="Top" Width="60" IsCancel="True"/>
    </Grid>
</Window>
