<Window x:Class="ImageRuler.DataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Data" Height="300" Width="250" Closing="Window_Closing" Icon="Resources/RulersIcon.ico" >
    <Grid>
        <ScrollViewer Margin="0,0,0,30" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" >
            <TextBlock x:Name="dataText" TextWrapping="Wrap" />
        </ScrollViewer>
        <Button x:Name="clearButton" Content="Clear" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="75" Click="clearButton_Click"/>
    </Grid>
</Window>
